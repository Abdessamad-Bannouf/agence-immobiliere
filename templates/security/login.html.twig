{% extends 'base.html.twig' %}

{% block title 'Se connecter' %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey | trans(error.messagedata, 'security') }}
        </div>
    {% endif %}
    <form action="{{ path('login') }}" method="post">
        <div class="container mt-4">
            <div class="form-group">
                <label for="username">Nom d'utilisation</label>
                <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="text" id="password" name="_password" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary"> Se connecter</button>
        </div>
    </form>

{% endblock %}