<div class="card mb-4">
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt="card-img-top" style="width:100%; heigth:auto;">
        {% else %}
            <img src="{{ '/images/properties/empty_room.jpg' | imagine_filter('thumb') }}" alt="card-img-top" style="width:100%; heigth:auto;"> 
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
                {{ property.title }}
            </a>
        <h5>
        <p class="card-text">{{ property.description | nl2br }}</p>
        <p class="card-text">{{ property.surface }} m² {{ property.city }} ({{ property.postalcode }})</p>
        <div class="text-primary" style="front-size:2em; font-weight: blod;">
            {{ property.formattedPrice }} €
        </div>
    </div>
</div>